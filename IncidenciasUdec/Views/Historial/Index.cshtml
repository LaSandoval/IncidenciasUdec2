
@model IEnumerable<IncidenciasUdec.Models.REPORTE>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Historial de Reportes</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Historial de Reportes</h1>
        <form method="get" action="@Url.Action("Index")" class="form-inline">
            <div class="form-group">
                <input type="text" name="searchString" class="form-control" placeholder="Buscar por ubicación" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-default">Buscar</button>
                <a href="@Url.Action("Index","Historial")" class="btn btn-primary">Ver todos</a>
               </div>
        </form>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID Usuario</th>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Tipo de Daño</th>
                    <th>Descripción</th>
                    <th>Clasificación</th>
                    <th>Imagen</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ID_USUARIO)</td>
                        <td>@Html.DisplayFor(modelItem => item.NOMBRE)</td>
                        <td>@Html.DisplayFor(modelItem => item.UBICACION.NOMBRE)</td> 
                        <td>@Html.DisplayFor(modelItem => item.TIPO_DAÑO.NOMBRE)</td> 
                        <td>@Html.DisplayFor(modelItem => item.DESCRIPCION)</td>
                        <td>@Html.DisplayFor(modelItem => item.CLASIFICACION.NOMBRE)</td> 
                        <td><a href="@item.IMAGEN" target="_blank">Ver imagen</a></td>
                        <td>@Html.DisplayFor(modelItem => item.ESTADO.NOMBRE)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
@Styles.Render("~/Content/Historial.css")
